#!/bin/bash

#TODO read config
ADDRESS="AA:BB:CC:DD:EE:FF"
REV_ADDDRESS="FF:EE:DD:CC:BB:AA"
SLEEP_SECONDS="60"

LOG="/dev/stderr"

PAND="/usr/bin/pand"

log() {
  echo "$*" >> $LOG
}

is_connected() {
  "$PAND" --list | grep -q "$REV_ADDRESS PANU" &>> "$LOG"
  return $?
}

connect() {
  if ! is_connected
  then
    "$PAND" --connect "$ADDRESS" --role PANU --nodetach --master &>> "$LOG"
  fi
}

disconnect() {
  if is_connected
  then
    "$PAND" --kill "$ADDRESS" &>> "$LOG"
  fi
}

log "Starting"

while /bin/true
do
  if ! is_connected 
  then 
    log "Attemption to connect to $ADDRESS"
    connect
  else
    log "2"
  fi
  #connect
  #else
  #  log "Connected"
  #fi

  sleep $SLEEP_SECONDS
done
